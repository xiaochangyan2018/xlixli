<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtTitle"
        style="@style/Widget.AppCompat.Light.ActionBar.TabText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        />
    <TextView
        android:id="@+id/txtCommentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textColor="@color/colorContentDarkHight"
        android:textSize="@dimen/textSizeSmallest"
        android:layout_marginLeft="@dimen/padding_s"
        />
</LinearLayout>
