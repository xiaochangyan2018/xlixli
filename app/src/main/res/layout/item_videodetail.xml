<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="video"
            type="com.xiao.xlixli.bean.Video" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_m"
       >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.shehuan.niv.NiceImageView
            android:id="@+id/imgHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:is_circle="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/imgHead"
            app:layout_constraintBottom_toBottomOf="@id/imgHead"
            app:layout_constraintLeft_toRightOf="@id/imgHead"
            android:layout_marginLeft="@dimen/padding_m">
            <TextView
                android:id="@+id/txtName"
                style="@style/FontTipInList"
                android:text="@{video.name}"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintTop_toTopOf="@id/imgHead"
                app:layout_constraintLeft_toRightOf="@id/imgHead"/>
            <TextView
                android:id="@+id/txtFins"
                style="@style/FontTimeInList"
                android:textSize="@dimen/textSizeSmallest_s"
                app:layout_constraintTop_toTopOf="@+id/txtName"
                android:text="@{video.fins}"
                app:layout_constraintLeft_toRightOf="@id/imgHead"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnGz"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/imgHead"
            app:layout_constraintBottom_toBottomOf="@id/imgHead"
            android:textColor="@color/colorContent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text=" + 关注"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/txtTitle"
            style="@style/FontTitleInList"
            app:layout_constraintTop_toBottomOf="@id/consName"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{video.title}"
            android:lines="1"

            />
        <ImageView
            android:id="@+id/imgPlaynums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_playnumsdark"
            android:layout_marginTop="@dimen/padding_s"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>
        <TextView
            android:id="@+id/txtPlaynums"
            style="@style/FontTimeInList"
            android:text="@{video.playNums}"
            app:layout_constraintLeft_toRightOf="@id/imgPlaynums"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintTop_toTopOf="@id/imgPlaynums"
            app:layout_constraintBottom_toBottomOf="@id/imgPlaynums"/>
        <ImageView
            android:id="@+id/imgFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_followdark"
            app:layout_constraintLeft_toRightOf="@id/txtPlaynums"
            app:layout_constraintTop_toTopOf="@id/imgPlaynums"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintBottom_toBottomOf="@id/txtPlaynums"/>
        <TextView
            android:id="@+id/txtFollows"
            style="@style/FontTimeInList"

            android:text="@{video.followNums+``}"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintLeft_toRightOf="@id/imgFollow"
            app:layout_constraintTop_toTopOf="@id/imgFollow"
            app:layout_constraintBottom_toBottomOf="@id/imgFollow"/>
        <TextView
            android:id="@+id/txtRelaseTime"
            style="@style/FontTimeInList"
            android:text="@{video.relaseTime}"
            app:layout_constraintLeft_toRightOf="@id/txtFollows"
            app:layout_constraintBottom_toBottomOf="@id/txtFollows"
            app:layout_constraintTop_toTopOf="@id/txtFollows"
            android:layout_marginLeft="@dimen/padding_s"/>
        <TextView
            android:id="@+id/txtAccount"
            style="@style/FontTimeInList"
            android:text="@{video.account}"
            app:layout_constraintLeft_toRightOf="@id/txtRelaseTime"
            app:layout_constraintBottom_toBottomOf="@id/txtRelaseTime"
            app:layout_constraintTop_toTopOf="@id/txtRelaseTime"
            android:layout_marginLeft="@dimen/padding_s"/>
        <TextView
            android:id="@+id/txtDescription"
            style="@style/FontTimeInList"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toBottomOf="@id/txtAccount"
            android:layout_marginBottom="@dimen/padding_s"
            android:layout_marginTop="@dimen/padding_s"
            android:text="@{video.description}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>