<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="video"
            type="com.xiao.xlixli.bean.Video" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/group_box_circular_shap"
        android:layout_marginTop="@dimen/padding_m"
        android:layout_marginRight="@dimen/padding_m"
       >

        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/imgPlaynums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_playnums"
            android:layout_margin="@dimen/padding_s"
            app:layout_constraintLeft_toLeftOf="@id/imgPoster"
            app:layout_constraintBottom_toBottomOf="@id/imgPoster"/>
        <TextView
            android:id="@+id/txtPlaynums"
            style="@style/FontTimeInList"
            android:text="@{video.playNums}"
            android:textColor="@color/colorContent"
            app:layout_constraintLeft_toRightOf="@id/imgPlaynums"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintTop_toTopOf="@id/imgPlaynums"
            app:layout_constraintBottom_toBottomOf="@id/imgPlaynums"/>
        <ImageView
            android:id="@+id/imgFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_follow"
            app:layout_constraintLeft_toRightOf="@id/txtPlaynums"
            app:layout_constraintTop_toTopOf="@id/imgPlaynums"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintBottom_toBottomOf="@id/txtPlaynums"/>
        <TextView
            android:id="@+id/txtFollows"
            style="@style/FontTimeInList"
            android:textColor="@color/colorContent"
            android:text="@{video.followNums+``}"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintLeft_toRightOf="@id/imgFollow"
            app:layout_constraintTop_toTopOf="@id/imgFollow"
            app:layout_constraintBottom_toBottomOf="@id/imgFollow"/>
        <TextView
            android:id="@+id/txtPlayTimes"
            style="@style/FontTimeInList"
            android:text="@{video.playTimes}"
            android:textColor="@color/colorContent"
            app:layout_constraintRight_toRightOf="@id/imgPoster"
            app:layout_constraintBottom_toBottomOf="@id/txtFollows"
            app:layout_constraintTop_toTopOf="@id/txtFollows"
            android:layout_marginRight="@dimen/padding_s"/>
        <TextView
            android:id="@+id/txtTitle"
            style="@style/FontTipInList"
            android:text="@{video.title}"
            android:lines="2"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintTop_toBottomOf="@id/imgPoster"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="@dimen/padding_m"
            />
        <TextView
            android:id="@+id/txtType"
            style="@style/FontTimeInList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitle"
            android:layout_marginLeft="@dimen/padding_m"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/padding_s"
            android:text="@{video.type}"/>
        <ImageButton
            style="@style/MMImageButton"
            android:src="@mipmap/img_menu_video"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/padding_s"
            android:layout_marginRight="@dimen/padding_s"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>