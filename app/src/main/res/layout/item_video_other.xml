<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="video"
            type="com.xiao.xlixli.bean.Video" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <com.shehuan.niv.NiceImageView
            android:id="@+id/imgPoster"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:corner_radius="@dimen/padding_s"

            android:layout_marginLeft="@dimen/padding_m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/txtTitle"
            style="@style/FontTipInList"
            android:text="@{video.title}"
            android:layout_width="0dp"
            android:lines="2"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintTop_toTopOf="@id/imgPoster"
            app:layout_constraintLeft_toRightOf="@id/imgPoster"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/padding_m"
            android:layout_marginRight="@dimen/padding_s"
            android:gravity="top"
            />
        <ImageView
            android:id="@+id/imgPlaynums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_playnumsdark"
            android:layout_marginLeft="@dimen/padding_m"
            app:layout_constraintLeft_toRightOf="@id/imgPoster"
            app:layout_constraintBottom_toBottomOf="@id/imgPoster"/>

        <TextView
            android:id="@+id/txtPlaynums"
            style="@style/FontTimeInList"
            android:text="@{video.playNums}"
            app:layout_constraintLeft_toRightOf="@id/imgPlaynums"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintTop_toTopOf="@id/imgPlaynums"
            app:layout_constraintBottom_toBottomOf="@id/imgPlaynums"/>
        <ImageView
            android:id="@+id/imgFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_followdark"
            app:layout_constraintLeft_toRightOf="@id/txtPlaynums"
            app:layout_constraintTop_toTopOf="@id/imgPlaynums"
            android:layout_marginLeft="@dimen/padding_lh"
            app:layout_constraintBottom_toBottomOf="@id/txtPlaynums"/>
        <TextView
            android:id="@+id/txtFollows"
            style="@style/FontTimeInList"
            android:text="@{video.followNums+``}"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintLeft_toRightOf="@id/imgFollow"
            app:layout_constraintTop_toTopOf="@id/imgFollow"
            app:layout_constraintBottom_toBottomOf="@id/imgFollow"/>
        <ImageView
            android:id="@+id/imgUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_up"
            app:layout_constraintBottom_toTopOf="@id/imgPlaynums"
            app:layout_constraintLeft_toRightOf="@id/imgPoster"
            android:layout_marginLeft="@dimen/padding_m"
            android:layout_marginBottom="@dimen/padding_s"/>
        <TextView
            style="@style/FontTimeInList"
            android:layout_marginLeft="@dimen/padding_s"
            app:layout_constraintLeft_toRightOf="@id/imgUp"
            app:layout_constraintTop_toTopOf="@id/imgUp"
            app:layout_constraintBottom_toBottomOf="@id/imgUp"
            android:text="@{video.name}"
            />


        <ImageButton
            style="@style/MMImageButton"
            android:src="@mipmap/img_menu_video"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgPoster"
            android:layout_marginBottom="@dimen/padding_s"
            android:layout_marginRight="@dimen/padding_s"
            />
        <View
            style="@style/MMViewLine"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/imgPoster"
            app:layout_constraintStart_toStartOf="@id/imgPoster"
            android:layout_marginTop="@dimen/padding_m"
            app:layout_constraintEnd_toEndOf="parent"></View>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>